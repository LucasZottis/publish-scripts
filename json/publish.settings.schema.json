{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Publisher Release Schema",
  "type": "object",
  "required": ["DefaultBranch", "Projects"],
  "additionalProperties": false,
  "properties": {
    "$schema": {
      "type": "string",
      "description": "URL do JSON Schema para validação"
    },
    "DefaultBranch": {
      "type": "string",
      "minLength": 1
    },
    "Projects": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/definitions/project"
      }
    },
    "Scripts": {
      "$ref": "#/definitions/globalScripts"
    }
  },
  "definitions": {
    "project": {
      "type": "object",
      "required": ["Path", "PublishPath", "Type"],
      "additionalProperties": false,
      "properties": {
        "Name": {
          "type": "string"
        },
        "Path": {
          "type": "string",
          "minLength": 1
        },
        "PublishPath": {
          "type": "string",
          "minLength": 1
        },
        "Type": {
          "type": "string",
          "enum": ["API", "Blazor", "Angular", "Nuget", "Console"]
        },
        "Scripts": {
          "$ref": "#/definitions/projectScripts"
        }
      }
    },

    "projectScripts": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "Before": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/script"
          }
        },
        "After": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/script"
          }
        }
      }
    },

    "globalScripts": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "Before": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/script"
          }
        },
        "After": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/script"
          }
        }
      }
    },

    "script": {
      "type": "object",
      "required": ["Type"],
      "additionalProperties": false,
      "properties": {
        "Type": {
          "type": "string",
          "enum": ["powershell", "ps1", "cmd"]
        },
        "Path": {
          "type": "string"
        },
        "Command": {
          "type": "string"
        }
      },
      "allOf": [
        {
          "if": {
            "properties": { "Type": { "const": "ps1" } }
          },
          "then": {
            "required": ["Path"],
            "not": { "required": ["Command"] }
          }
        },
        {
          "if": {
            "properties": { "Type": { "const": "powershell" } }
          },
          "then": {
            "required": ["Command"],
            "not": { "required": ["Path"] }
          }
        },
        {
          "if": {
            "properties": { "Type": { "const": "cmd" } }
          },
          "then": {
            "required": ["Command"],
            "not": { "required": ["Path"] }
          }
        }
      ]
    }
  }
}
