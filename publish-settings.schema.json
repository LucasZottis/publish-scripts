{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Publish Configuration Schema",
  "type": "object",
  "required": ["DefaultBranch", "Projects"],
  "properties": {
    "DefaultBranch": {
      "type": "string",
      "minLength": 1
    },
    "Projects": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/definitions/project"
      }
    },
    "Scripts": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/scriptGlobal"
      }
    }
  },
  "definitions": {
    "project": {
      "type": "object",
      "required": ["Path", "PublishPath", "Type"],
      "properties": {
        "Name": {
          "type": "string"
        },
        "Path": {
          "type": "string",
          "minLength": 1
        },
        "PublishPath": {
          "type": "string",
          "minLength": 1
        },
        "Type": {
          "type": "string",
          "enum": ["API", "Blazor", "Angular", "Nuget", "Console"]
        },
        "Scripts": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/scriptProject"
          }
        }
      }
    },
    "scriptProject": {
      "type": "object",
      "required": ["When"],
      "properties": {
        "Name": {
          "type": "string"
        },
        "Path": {
          "type": "string"
        },
        "When": {
          "type": "string",
          "enum": ["BeforePublish", "AfterPublish"]
        }
      },
      "oneOf": [
        { "required": ["Name"] },
        { "required": ["Path"] }
      ]
    },
    "scriptGlobal": {
      "type": "object",
      "required": ["When"],
      "properties": {
        "Name": {
          "type": "string"
        },
        "Path": {
          "type": "string"
        },
        "When": {
          "type": "string",
          "enum": ["BeforeAll", "AfterAll"]
        }
      },
      "oneOf": [
        { "required": ["Name"] },
        { "required": ["Path"] }
      ]
    }
  }
}
